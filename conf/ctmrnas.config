
params {
    clusterOptions = false
    reads = "*_{R1,R2}.fastq.gz"
    adapters = "/home/ctmr/db/bbmap_resources/adapters.fa"
    mashscreen_database = "/db/refseq/refseq.genomes.k21s1000.msh"
    output_dir = "./BACTpipe_results"
}

process {
    executor = 'local'
    clusterOptions = {
       " -A ${params.project}" + (params.clusterOptions ?: '')
    }
    scratch = true
    stageInMode = 'copy'
    stageOutMode = 'copy'

    //Resource and module requirements

    $assess_decontamination {

        cpus = 2
        time = 30.m

    }

    $bbduk {
	cpus = 4
        time = 1.h
    }

    $fastqc {
        cpus = 2
        time = 40.m
    }

    $shovill {
	cpus = 4
        time = 3.h
    }

    $stats {
	cpus = 1
        time = 20.m
   }

   $prokka {
        cpus = 1
        time = 2.h
   }

}

