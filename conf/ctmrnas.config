// vim: syntax=groovy expandtab
// BACTpipe Nextflow configuration file

params {
    reads = "*_R{1,2}.fastq.gz"
}

process {
    errorStrategy = 'ignore'
    executor = 'local'
    clusterOptions = {
      " -A ${params.project}" + (params.clusterOptions ?: '')
    }
    scratch = true
    stageInMode = 'copy'
    stageOutMode = 'copy'

    //Resource and module requirements
    withName: screen_for_contaminants {
       cpus = 8
       time = 15.m
    }
    withName: bbduk {
       cpus = 4
       time = 15.m
    }
    withName: fastqc {
       cpus = 2
       time = 30.m
    }
    withName: shovill {
       cpus = 8
       time = 1.h
    }
    withName: prokka {
        cpus = 1
        time = 2.h
    }
    withName: multiqc {
        cpus = 1
        time = 10.m
    }
}

