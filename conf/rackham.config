// vim: syntax=groovy expandtab
// BACTpipe Nextflow configuration file

params { 
    mashscreen_database = "/proj/uppstore2017086/db/refseq.genomes.k21s1000.msh"
}

process {
    errorStrategy = 'ignore'
    executor = 'slurm'
    clusterOptions = {
       " -A ${params.project}" + (params.clusterOptions ?: '')
    }
    scratch = true
    stageInMode = 'copy'
    stageOutMode = 'copy'

    //Resource and module requirements

    withName: screen_for_contaminants {
        module = 'bioinfo-tools:bbmap'
        cpus = 1
	memory = 8.GB
        time = 30.m
    }
    withName: fastp {
        module = 'bioinfo-tools:fastp'
        cpus = 3
        time = 20.m
        memory = 24.GB
    }
    withName: shovill {
        module = 'bioinfo-tools:shovill/1.0.0'
        cpus = 16
        time = 3.h
        memory = 32.GB
    }
    withName: prokka {
        module = 'bioinfo-tools:prokka/1.12-12547ca'
        cpus = 1
        time = 2.h
        memory = 8.GB
    }
    withName: multiqc {
        module = 'bioinfo-tools:MultiQC/1.5'
        cpus = 1
        time = 10.m
    }
}


